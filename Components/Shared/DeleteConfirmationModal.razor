<div 
    class="modal fade" 
    id="DeleteConfirmationModal" 
    tabindex="-1" 
    aria-labelledby="DeleteConfirmationModalLabel" 
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1
                    class="modal-title fs-5"
                    id="DeleteConfirmationModalLabel">
                    Modal title
                </h1>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close">
                </button>
            </div>
            
            <div class="modal-body">
                ...
            </div>
            
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                    @onclick="()=>ConfirmationClick(false)">
                    Cancel
                </button>
                <button
                    type="button"
                    class="btn btn-danger"
                    @onclick="()=>ConfirmationClick(true)">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public EventCallback<bool> OnModalConfirmation { get; set; }
    
    
    private async Task ConfirmationClick(bool value)
    {
        if (!value) return;
        
        await OnModalConfirmation.InvokeAsync(value);
    }
}